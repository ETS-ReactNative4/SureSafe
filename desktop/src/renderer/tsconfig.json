{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client", "@twstyled/core"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "../../src",
    "paths": {
      "@/renderer/*": ["renderer/*"],
      "@suresafe/common/*": ["common/*"],
      "@suresafe/core-ui/*": ["renderer/core-ui"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["../renderer/**/*", "../common/**/*"],
  "exclude": ["../main/**/*"]
}
